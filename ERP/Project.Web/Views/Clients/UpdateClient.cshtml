    <div class="page-content container-fluid">
        <div class="col-sm-8">
            <div class="widget">
                <div class="widget-heading clearfix">
                    <h3 class="widget-title pull-left">Edit Client</h3>
                    @if (ViewBag.Error_Msg != "")
                    {
                        <div style="margin-left:200px;">
                            <p style="color:red;">@ViewBag.Error_Msg</p>
                        </div>
                    }
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary" title="Edit Client" onclick="SubmitForm()"><i class="ti-save"></i></button>
                        <button type="button" class="btn btn-default" title="Cancel" onclick="Cancel();"><i class="ti-share-alt"></i></button>
                    </div>
                </div>
                <div class="widget-body">
                    <form class="form-horizontal" method="post" action="/Clients/UpdateClient" enctype="multipart/form-data" id="mainForm">
                        <div class="tab-content">
                            <div id="general" role="tabpanel" class="tab-pane active">
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" placeholder="Name" name="Name" id="Name" value="@Model.Name">
                                        <div id="error_Div_Name" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Name</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" placeholder="Company Name" name="CompanyName" id="CompanyName" value="@Model.CompanyName">
                                        <div id="error_Div_CompanyName" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Company Name</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input id="Email" type="email" class="form-control" placeholder="Email" name="Email" value="@Model.Email">
                                        <div id="error_Div_Email1" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Valid Email</p>
                                        </div>
                                        <div id="error_Div_Email2" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Valid Email</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input id="Alternate_Email" type="email" class="form-control" placeholder="Alternate Email" name="Alternate_Email" value="@Model.Alternate_Email">
                                        <div id="error_Div_Alternate_Email" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Valid Email</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input id="ContactNo" type="text" class="form-control" placeholder="Contact" name="ContactNo" value="@Model.ContactNo" onkeypress="return isNumberKey(event)" maxlength="13">
                                        <div id="error_Div_ContactNo1" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Your Contact No</p>
                                        </div>
                                        <div id="error_Div_ContactNo2" style="display:none;color:red;">
                                            <p style="color:red;">Contact No Should be minimum 10 Characters</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input id="SkypeNo" type="text" class="form-control" placeholder="Skype" name="SkypeNo" value="@Model.SkypeNo" maxlength="20">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input id="AddressLine1" type="text" class="form-control" placeholder="AddressLine1" name="AddressLine1" value="@Model.AddressLine1">
                                    </div>
                                    <div class="col-sm-6">
                                        <input id="AddressLine2" type="text" class="form-control" placeholder="AddressLine2" name="AddressLine2" value="@Model.AddressLine2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input id="City" type="text" class="form-control" placeholder="City" name="City" value="@Model.City">
                                    </div>
                                    <div class="col-sm-6">
                                        <input id="State" type="text" class="form-control" placeholder="State" name="State" value="@Model.State">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <select class="input-medium bfh-countries form-control form-cutom" data-country="US" id="Country" name="Country"></select>
                                        <input type="hidden" id="cnt" value="@Model.Country" />
                                        <div id="error_Div_Country" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Your Country</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input id="ZipCode" type="text" class="form-control" placeholder="ZipCode" name="ZipCode" value="@Model.ZipCode" onkeypress="return isNumberKey(event)" maxlength="6">
                                        <input type="hidden" name="Client_ID" value="@Model.Client_ID" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input id="JobDescription" type="text" class="form-control" placeholder="Work Description" name="JobDescription" value="@Model.JobDescription">
                                        <div id="error_Div_JobDescription" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Job Description</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        @*<label for="Source">Source</label>*@
                                        @Html.DropDownListFor(m => m.Source, (List<SelectListItem>)ViewBag.Source_List, new { @class = "form-control form-cutom" })
                                        <div id="error_Div_Source" style="display:none;color:red;">
                                            <p style="color:red;">Please Enter Source.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        
        <div class="col-sm-4">
        </div>
    </div>
</div>
