                        $('#fullcalendar').fullCalendar('refetchEvents');
                        $("#addNewEvent").modal('hide');
                        $("#eForm")[0].reset();
                        $(".se-pre-con").hide();
                    }
                    else {
                        $("#addNewEvent").modal('hide');
                        $("#eForm")[0].reset();
                        $(".se-pre-con").hide();
                    }
                },
                error: function (xhr) {
                    $("#addNewEvent").modal('hide');
                    $("#eForm")[0].reset();
                    $(".se-pre-con").hide();
                    $('#errorMessage').html("No connection");
                }
            });
        }        
    }


