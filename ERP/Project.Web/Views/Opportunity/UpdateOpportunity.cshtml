                            <div id="general" role="tabpanel" class="tab-pane active">
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <label for="Name">Name</label>
                                        <input class="form-control form-cutom" name="Name" id="Name" value="@Model.Name" />
